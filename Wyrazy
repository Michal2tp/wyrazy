#include<iostream>
using namespace std;

int main()
{
    int x=1;
    string tekst;
    cout<<"Wprowadz tekst:\n";
    getline(cin,tekst);

    int t=tekst.length();

    if (t>0){

    for (int i=0;i<t;i++)
    {
        if (tekst[i]==' ')
        x++;
    }
    }
    else x=0;
    cout<<"Ilosc wyrazow wynosi: "<<x;
    return 0;
}
